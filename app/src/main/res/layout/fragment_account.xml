<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".ui.framgent.AccountFragment">

    <ImageView
        android:id="@+id/account_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_account_circle_black"
        android:translationZ="10dp" />

    <ProgressBar
        android:id="@+id/account_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:translationZ="20dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/account_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                style="@style/LabelTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account" />

            <TextView
                android:id="@+id/account_label"
                style="@style/MainContentTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jack Dirty" />

            <TextView
                style="@style/LabelTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Current balance" />

            <TextView
                android:id="@+id/balance_label"
                style="@style/MainContentTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 $" />

            <TextView
                style="@style/LabelTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Phone number" />

            <TextView
                android:id="@+id/number_label"
                style="@style/MainContentTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+380634494678" />

            <TextView
                style="@style/LabelTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Tariff Plan" />

            <TextView
                android:id="@+id/tariff_label"
                style="@style/MainContentTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..." />

            <TextView
                style="@style/LabelTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Registration date" />

            <TextView
                android:id="@+id/registration_label"
                style="@style/MainContentTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.01.2007" />

            <TextView
                style="@style/LabelTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Total services cost in month" />

            <TextView
                android:id="@+id/cost_label"
                style="@style/MainContentTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="124.50 $" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:text="View tech requests"
                android:textColor="@color/colorAccent"
                android:id="@+id/create_tech_request"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>